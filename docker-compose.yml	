version: "2"
services:
  aria2:
    image: superng6/aria2
    container_name: aria2
    environment:
      - PUID=1026
      - PGID=100
      - TZ=Asia/Shanghai
      - SECRET=fpf
    volumes:
      - /www/download:/downloads
    ports:
      - 6881:6881
      - 6881:6881/udp
      - 6800:6800
    restart: unless-stopped

  db:
    image: mariadb:10.1
    environment:
      MYSQL_ROOT_PASSWORD: filerun
      MYSQL_USER: filerun
      MYSQL_PASSWORD: filerun
      MYSQL_DATABASE: filerun

  web:
    depends_on:
      - db
    links:
      - db
    image: afian/filerun
    environment:
      - PUID=1026
      - PGID=100
    ports:
      - "8021:80"
    volumes:
      - /www/download:/var/www/html/system/data/default_home_folder"
